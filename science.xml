<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>Strength in Numbers: Science posts</title>
 <link href="http://numbers.brighterlanet.com/science.xml" rel="self"/>
 <link href="http://numbers.brighterplanet.com/science.html" />
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://numbers.brighterplanet.com</id>
 <author>
   <name>Brighter Planet</name>
   <email>staff@brighterplanet.com</email>
 </author>

 {% for post in site.categories.science %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="http://numbers.brighterplanet.com{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://numbers.brighterplanet.com{{ post.id }}</id>
   <author>
     <name>{{ post.author }}</name>
   </author>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
 
</feed>
